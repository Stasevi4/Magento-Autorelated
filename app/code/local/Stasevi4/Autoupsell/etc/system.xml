<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs>
		<autoupsell translate="label">
			<label>Stasevi4</label>
			<sort_order>100</sort_order>
		</autoupsell>
	</tabs>
	<sections>
		<autoupsell translate="lablel" module="autoupsell">
			<label>Auto Closs-sell , Up-Sell , Related Products</label>
			<tab>autoupsell</tab>
			<frontend_type>text</frontend_type>
			<sort_order>300</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label> Up-Sell Products</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enable Auto Up-Sell Products</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<samecategory translate="label">
							<label>Related Products from same category</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</samecategory>
						<limit translate="label">
							<label>Limit</label>
							<frontend_type>text</frontend_type>
							<validate>validate-digits</validate>
							<comment><![CDATA[Number of Up-Sell products to show (e.g. 3)]]></comment>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</limit>
						<columncount translate="label">
							<label>Number of column</label>
							<frontend_type>text</frontend_type>
							<validate>validate-digits</validate>
							<comment><![CDATA[Number of  column to show (e.g. 3)  to use default config ( 0 ) ]]></comment>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</columncount>
					</fields>
				</general>
				<generalrelated translate="label">
					<label> Related Products</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
						<fields>
						<enabled translate="label">
							<label>Enable Auto Related Products</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						
						<limit translate="label">
							<label>Limit</label>
							<frontend_type>text</frontend_type>
							<validate>validate-digits</validate>
							<comment><![CDATA[Number of related products to show (e.g. 3)]]></comment>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</limit>
					</fields>
						
				</generalrelated>
				
				<generalcrosssell translate="label">
					<label> Cross-sell Products</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
						<fields>
						<enabled translate="label">
							<label>Enable Auto Cross-sell Products</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						
						<limit translate="label">
							<label>Limit</label>
							<frontend_type>text</frontend_type>
							<validate>validate-digits</validate>
							<comment><![CDATA[Number of related products to show (e.g. 3)]]></comment>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</limit>
					</fields>
						
				</generalcrosssell>
			</groups>
		</autoupsell>
	</sections>
	
</config>